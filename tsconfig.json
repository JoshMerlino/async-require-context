{
	"compilerOptions": {
		"lib": [ "es2020" ],
		"module": "esnext",
		"target": "esnext",
		"types": [ "node", "jest" ],
		"outDir": "lib/esm",
		"jsx": "react",
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noUnusedParameters": true,
		"allowUnreachableCode": false,
		"preserveConstEnums": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"declaration": true
	},
	"exclude": [
		"node_modules",
		"test",
		"lib"
	]
}
